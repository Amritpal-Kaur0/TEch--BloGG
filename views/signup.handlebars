
<div class="container">
  <h2 class="display-3 text-center">Signup</h2>

  <form class="form signup-form">
    <div class="form-group">
      <label for="name-signup"  class="fw-bold">Username:</label>
      <input class="form-input" type="text" id="name-signup" />
    </div>
    <div class="form-group">
      <label for="email-signup" class="fw-bold">Email:</label>
      <input class="form-input" type="text" id="email-signup"/>
    </div>
    <div class="form-group">
      <label for="password-signup"  class="fw-bold">Password:</label>
      <input class="form-input" type="password" id="password-signup"/>
    </div>
    <div class="form-group d-flex justify-content-center">
      <button class="btn btn-primary" type="submit">SIGNUP</button>
    </div>
  </form>
</div>

<script src="/js/signup.js"></script>